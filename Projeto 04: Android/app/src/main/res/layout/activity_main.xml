<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:id="@+id/textView"
            android:layout_width="259dp"
            android:layout_height="76dp"
            android:text=""
            android:textSize="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="101dp"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/btnLimparVisor"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="ac"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="309dp"
            tools:layout_editor_absoluteY="101dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/btnNumber7"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="7"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="209dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnNumber8"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="8"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="209dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnNumber9"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="9"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="212dp"
            tools:layout_editor_absoluteY="209dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnMultiplicar"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="*"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="309dp"
            tools:layout_editor_absoluteY="209dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/btnNumber4"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="4"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="327dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnNumber5"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="5"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="327dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnNumber6"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="6"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="212dp"
            tools:layout_editor_absoluteY="327dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnDividir"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="/"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="309dp"
            tools:layout_editor_absoluteY="327dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/btnNumber1"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="1"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="443dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnNumber2"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="2"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="443dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnNumber3"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="3"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="212dp"
            tools:layout_editor_absoluteY="443dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnSomar"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="+"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="309dp"
            tools:layout_editor_absoluteY="443dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/btnNumber0"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="0"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="555dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnPonto"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="."
            android:textSize="30dp"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="555dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="="
            android:textSize="30dp"
            tools:layout_editor_absoluteX="212dp"
            tools:layout_editor_absoluteY="555dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnSubtracao"
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:text="-"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="309dp"
            tools:layout_editor_absoluteY="555dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgModo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rbLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Cálculo Local" />

        <RadioButton
            android:id="@+id/rbSocket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cálculo via Socket" />

        <RadioButton
            android:id="@+id/rbHTTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cálculo via HTTP" />
    </RadioGroup>

</LinearLayout>